<h1>Listing users</h1>
<p><%= @some_text %></p>


<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<p class="bottom_links"><%= link_to 'New User', new_user_path %>
<%= link_to 'Delete All Users', User, method: :delete, data:{ confirm: 'Are you sure?'} %></p>

