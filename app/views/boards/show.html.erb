<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @board.name %>
</p>

<p>
  <strong>About:</strong>
  <%= @board.about %>
</p>

<p>
  <strong>User:</strong>
  <%= @board.user.full_name %>
</p>

<p>
  <strong>Associated Pins:</strong>
  <% @pins.each do |pin| %>
 	 <tr>
        <td><%= image_tag(pin.image_url, :width => 200) if pin.image.present? %></td>
     </tr>
  <% end %>
</p>

